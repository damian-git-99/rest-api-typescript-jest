{
  "name": "rest-api-nodejs-typescript-jest-jwt",
  "version": "1.0.0",
  "description": "Example of a rest api using node js with typescript and jest for testing",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "cross-env NODE_ENV=test glob -c \"node --loader tsx --no-warnings --test\" \"./tests/**/*.spec.ts\"",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "dev": "cross-env NODE_ENV=development nodemon --exec npx ts-node --files src/index.ts",
    "clean": "npx rimraf build",
    "build": "npm run clean && tsc",
    "start": "cross-env NODE_ENV=development node build/index.js",
    "start-with-docker": "cross-env NODE_ENV=docker node build/index.js"
  },
  "author": "damian-git-99",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "5.0.1",
    "config": "3.3.7",
    "cross-env": "7.0.3",
    "express": "4.17.3",
    "express-async-handler": "1.2.0",
    "express-validator": "6.14.0",
    "pg": "8.7.3",
    "pg-hstore": "2.3.4",
    "sequelize": "6.17.0",
    "sqlite3": "5.0.2",
    "uuid": "8.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "5.0.0",
    "@types/config": "0.0.41",
    "@types/express": "4.17.13",
    "@types/node": "^20.6.0",
    "@types/supertest": "2.0.11",
    "@types/uuid": "8.3.4",
    "glob": "^10.3.4",
    "nodemon": "^2.0.15",
    "supertest": "6.2.2",
    "ts-node": "10.4.0",
    "tsx": "^3.12.10",
    "typescript": "4.5.5"
  }
}
